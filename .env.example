# App Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=debug

# X API Credentials
TWITTER_API_KEY="your_api_key_here"
TWITTER_API_SECRET="your_api_secret_here"
TWITTER_ACCESS_TOKEN="your_access_token_here"
TWITTER_ACCESS_SECRET="your_access_secret_here"
TWITTER_BEARER_TOKEN="your_bearer_token_here"

# Database Configuration (Postgres)
DATABASE_URL="postgresql://user:password@localhost:5432/agentx?schema=public"

# Redis Configuration (BullMQ)
REDIS_URL="redis://localhost:6379"

# Posting Configuration (Comma-separated H:mm formats, e.g., 08:30,12:00,18:45)
POST_WINDOWS="09:00,14:00,19:00"
TIMEZONE="UTC"

# Security & Safeguards
GLOBAL_KILL_SWITCH=false
MAX_RETRIES=3
WAIT_MINUTES_BETWEEN_POSTS=60

# Media
S3_BUCKET="your_bucket"
S3_ENDPOINT="https://s3.example.com"
S3_ACCESS_KEY="your_key"
S3_SECRET_KEY="your_secret"
